@model SourceControlAssignment1.Models.User

@{
    ViewBag.Title = "Create";
}
    <div class="container">
        <h2>User Information</h2>


        @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
