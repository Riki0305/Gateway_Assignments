@model SBS.Model.Customer
@{
    ViewBag.Title = "ChangePassword";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<h2>Change Password</h2>


@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Address1)
    @Html.HiddenFor(model => model.Address2)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.CustomerNo)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">

            <div class="form-group col-md-4">
                <label class="col-md-6">Enter Old Password</label>
                <div class="col-md-10">
                    <input type="password" name="oldPass" id="oldPass" class="form-control col-md-12" />

                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="col-md-6">Enter New Password</label>
                <div class="col-md-10">
                    <input type="password" name="newPass" id="newPass" class="form-control col-md-12" />

                </div>
            </div>

        </div>



        <hr /><br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change Password" class="btn btn-success btn-sm mr-2" />
                @Html.ActionLink("Back to dashboard", "UserProfile", "Customer", new { id = Model.Id }, new { @class = "btn btn-info btn-sm" })
            </div>
        </div>
    </div>
}

<div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

