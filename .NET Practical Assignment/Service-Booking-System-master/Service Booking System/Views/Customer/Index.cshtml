@model IEnumerable<SBS.Model.Customer>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Customers</h2><hr />

                                      <p>
                                          <a class="btn  btn-success" href="@Url.Action("AddorEdit", "Customer")"><i class="fa fa-plus "></i> New Customer</a>
                                         
                                      </p>
<table class="table table-bordered table-hover">
    <tr class="bg-dark text-white">
        <th>
            @Html.DisplayNameFor(model => model.CustomerNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeContact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>Actions</th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CustomerNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ZipCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Password)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Contact)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HomeContact)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Note)
    </td>
    <td>
        @Html.ActionLink("Edit", "AddorEdit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary mb-2" }) 
        @Html.ActionLink("Details", "UserProfile", new { id = item.Id }, new { @class = "btn btn-sm btn-info mb-2" }) 
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger mb-2" })
    </td>
</tr>
        }
    }
    else
    {
        <tr>
            <td colspan="9">No data</td>
        </tr>
    }

</table>
<script>
     $(function () {

        var successmessage = '@TempData["SuccessMessage"]';
         var errormessage = '@TempData["ErrorMessage"]';
         if (successmessage != '') {
             alertify.success(successmessage);
         }
         if (errormessage != '') {
             alertify.error(errormessage);
         }
    });
</script>